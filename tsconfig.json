{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "target": "es5",
        "lib": ["es6"],
        "moduleResolution": "node",
        "rootDir": "source",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "declaration": true
    },
    "exclude": ["node_modules"]
}
